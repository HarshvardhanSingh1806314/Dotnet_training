@model List<Assignment_1.Models.Contact>

@{
    ViewBag.Title = "All Contacts";
}

<h2>All Contacts</h2>

<p>
    @Html.ActionLink("Create New Contact", "CreateContact")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model[0].Email)
        </th>
    </tr>

    @foreach(var item in Model)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Update Contact", "Update", item)
                @Html.ActionLink("Details", "Details", new {Id = item.Id})
                @Html.ActionLink("Delete", "DeleteContact", item)
            </td>
        </tr>
     }
</table>